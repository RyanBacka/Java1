<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/playerList"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/playerNameLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="30dp" />

        <TextView
            android:id="@+id/playerPointsLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text=""
            android:textSize="30dp" />

        <TextView
            android:id="@+id/opponentLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/playerNameLand"
            android:text=""
            android:textSize="20dp" />

        <TextView
            android:id="@+id/injuredLand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/playerNameLand"
            android:layout_toEndOf="@id/playerNameLand"
            android:paddingLeft="5dp"
            android:text=""
            android:textSize="15dp" />
    </RelativeLayout>


</LinearLayout>