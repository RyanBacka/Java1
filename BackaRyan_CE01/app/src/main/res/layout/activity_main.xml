<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ce01.ryankbacka.backaryan_ce01.MainActivity">


    <TextView
        android:id="@+id/calculatoOutput"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAlignment="viewEnd"
        android:textSize="30dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/calculatoOutput"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/calculatoOutput">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button7"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button8"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30dp" />

            <Button
                android:id="@+id/divideButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button9"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/Layout1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button4"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button5"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30dp" />

            <Button
                android:id="@+id/multiplyButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button6"
                android:layout_weight="1"
                android:text="*"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/Layout2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button1"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button2"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30dp" />

            <Button
                android:id="@+id/subtractButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button6"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@+id/Layout3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30dp" />

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/clearButton"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30dp" />

            <Button
                android:id="@+id/equalsButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/button0"
                android:layout_weight="1"
                android:text="="
                android:textSize="30dp" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/equalsButton"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30dp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
